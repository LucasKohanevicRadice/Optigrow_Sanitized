# EditorConfig helps maintain consistent coding styles and EOL across editors
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{md,txt}]
trim_trailing_whitespace = false

[*.ps1]
end_of_line = crlf

[*.sh]
end_of_line = lf